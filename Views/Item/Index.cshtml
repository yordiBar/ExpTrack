@model IEnumerable<ExpTrack.Models.Item>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List of My Items</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Item" asp-action="Create" class="btn btn-primary">Create new Item</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th class="text-center">
                        Item Name
                    </th>
                    <th class="text-center">
                        Borrower
                    </th>
                    <th class="text-center">
                        Lender
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                <tr>
                    <td width="30%" class="text-center">@item.ItemName</td>
                    <td width="30%" class="text-center">@item.Borrower</td>
                    <td width="30%" class="text-center">@item.Lender</td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items to display. Please add new items!</p>
    }
</div>

